	"item": [
		{
			"name": "Send notification - email",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var data = JSON.parse(responseBody)\r",
							"pm.collectionVariables.set(\"webContentReference\", data.reference);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var uuid = require('uuid');\r",
							"var client_reference = uuid.v4(); \r",
							"pm.collectionVariables.set(\"client_reference\", client_reference);\r",
							"// why not simply {{$guid}} ???\r",
							"// because we're referencing it elsewhere"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{angularpay_access_token}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [
					{
						"key": "x-angularpay-username",
						"value": "{{angularpay-username}}",
						"type": "text"
					},
					{
						"key": "x-angularpay-user-reference",
						"value": "{{angularpay-user-reference}}",
						"type": "text"
					},
					{
						"key": "x-angularpay-device-id",
						"value": "{{angularpay-device-id}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"client_reference\": \"{{client_reference}}\",\r\n    \"channel\": \"EMAIL\",\r\n    \"type\": \"INSTANT\",\r\n    \"subject\": \"Welcome to AngularPay!\",\r\n    \"from\": \"angularpay.notifications@gmail.com\",\r\n    \"to\": \"dornungbor@gmail.com\",\r\n    \"message\": \"Thank you for signing up!\",\r\n    \"send_at\": \"2021-11-27T07:40:00\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{angularpay-api-gateway}}/notification/requests",
					"host": [
						"{{angularpay-api-gateway}}"
					],
					"path": [
						"notification",
						"requests"
					]
				}
			},
			"response": []
		},
